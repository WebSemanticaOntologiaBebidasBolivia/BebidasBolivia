@prefix :       <#> .
@prefix tdb2:   <http://jena.apache.org/2016/tdb#> .
@prefix fuseki: <http://jena.apache.org/fuseki#> .
@prefix ja:     <http://jena.hpl.hp.com/2005/11/Assembler#> .

# Servicio SPARQL: /bebidas con endpoints /query, /update, /data, /upload
:service-bebidas a fuseki:Service ;
  fuseki:name                       "bebidas" ;
  fuseki:serviceQuery               "query" ;
  fuseki:serviceUpdate              "update" ;
  fuseki:serviceUpload              "upload" ;
  fuseki:serviceReadWriteGraphStore "data" ;
  fuseki:dataset                    :dataset-bebidas .

# Dataset persistente TDB2 en disco
:dataset-bebidas a tdb2:DatasetTDB2 ;
  tdb2:location "databases/bebidas" ;
  tdb2:unionDefaultGraph false .
